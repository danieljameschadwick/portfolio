{% extends "index.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('cv') }}
{% endblock stylesheets %}

{% block page_content %}
    <div id="cv" class="container p-2 mx-auto">
        <h2 class="heading text-2xl">Curriculum Vitae.</h2>
        <a href="{{ asset('assets/cv.pdf') }}" target="_blank">
            <img src="{{ asset('img/cv_placeholder.jpg') }}" />
        </a>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ parent()  }}

    <script type="text/javascript">
        window.onload = window.onload = function() {
            window.scrollTo(0, 500); // x,y
        };
    </script>
{% endblock javascripts %}